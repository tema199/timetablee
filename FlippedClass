<script>
    let totalScore = 0;
    // ูุชุบูุฑุงุช ุงูุฏุฑุฌุงุช ููู ูุณู (ุงููุฌููุน 10)
    // ุงููุฎุชุจุฑ: 3 ููุงุท (1 ููู ูููุฉ)
    // ุงูุฃุฎุทุงุก: 3 ููุงุท (1 ููู ูููุฉ)
    // ุงูุงุฎุชุจุงุฑ: 4 ููุงุท (1 ููู ุณุคุงู)
    let scores = {
        lab1:0, lab2:0, lab3:0, 
        dbg1:0, dbg2:0, dbg3:0, 
        quiz:0
    };

    function nextStep(step) {
        document.querySelectorAll('.station').forEach(el => el.classList.remove('active'));
        document.getElementById('step' + step).classList.add('active');
        let percent = (step / 9) * 100;
        document.getElementById('progressBar').style.width = percent + "%";
    }

    // --- ุฏูุงู ุงููุฎุชุจุฑ (3 ููุงุท) ---
    function checkLab1() { 
        let code = document.getElementById('code1').value.toLowerCase();
        let feedback = document.getElementById('feed1');
        document.getElementById('prev1').innerHTML = document.getElementById('code1').value;
        if (code.includes('<input') && code.includes('type="text"')) {
            feedback.innerHTML = "โ ููุชุงุฒ! (type='text') ุตุญูุญ.";
            feedback.className = "feedback success"; feedback.style.display = 'block';
            document.getElementById('nextLab1').style.display = 'inline-block';
            if(scores.lab1 === 0) { totalScore += 1; scores.lab1 = 1; }
        } else {
            feedback.innerHTML = "โ๏ธ ุชุฃูุฏู ูู ูุชุงุจุฉ type=\"text\"";
            feedback.className = "feedback error"; feedback.style.display = 'block';
        }
    }

    function checkLab2() { 
        let code = document.getElementById('code2').value.toLowerCase();
        let feedback = document.getElementById('feed2');
        document.getElementById('prev2').innerHTML = document.getElementById('code2').value;
        if (code.includes('<input') && code.includes('type="password"')) {
            feedback.innerHTML = "โ ุฃุญุณูุชู! (type='password') ุตุญูุญ.";
            feedback.className = "feedback success"; feedback.style.display = 'block';
            document.getElementById('nextLab2').style.display = 'inline-block';
            if(scores.lab2 === 0) { totalScore += 1; scores.lab2 = 1; }
        } else {
            feedback.innerHTML = "โ๏ธ ุชุฃูุฏู ูู ูุชุงุจุฉ type=\"password\"";
            feedback.className = "feedback error"; feedback.style.display = 'block';
        }
    }

    function checkLab3() { 
        let code = document.getElementById('code3').value.toLowerCase();
        let feedback = document.getElementById('feed3');
        document.getElementById('prev3').innerHTML = document.getElementById('code3').value;
        if (code.includes('<input') && code.includes('type="radio"')) {
            feedback.innerHTML = "โ ุฑุงุฆุน! (type='radio') ุตุญูุญ.";
            feedback.className = "feedback success"; feedback.style.display = 'block';
            document.getElementById('nextLab3').style.display = 'inline-block';
            if(scores.lab3 === 0) { totalScore += 1; scores.lab3 = 1; }
        } else {
            feedback.innerHTML = "โ๏ธ ุชุฃูุฏู ูู ูุชุงุจุฉ type=\"radio\"";
            feedback.className = "feedback error"; feedback.style.display = 'block';
        }
    }

    // --- ุฏูุงู ุงูุชุตุญูุญ (3 ููุงุท) ---
    function checkDebug(el, isCorrect, taskNum) {
        let feedback = document.getElementById('debugFeedback' + taskNum);
        let btn = document.getElementById('btnDebugNext' + taskNum);
        
        if(isCorrect) {
            feedback.innerHTML = "โ ุฅุฌุงุจุฉ ุตุญูุญุฉ! ุฃุญุณูุชู ุงูุชุญููู.";
            feedback.className = "feedback success";
            feedback.style.display = 'block';
            btn.style.display = 'inline-block';
            
            // ุงุญุชุณุงุจ ุงูุฏุฑุฌุฉ ูุฑุฉ ูุงุญุฏุฉ
            let key = 'dbg' + taskNum;
            if(scores[key] === 0) { totalScore += 1; scores[key] = 1; }
        } else {
            feedback.innerHTML = "โ ุฎุทุฃ.. ุญุงููู ูุฑุฉ ุฃุฎุฑู.";
            feedback.className = "feedback error";
            feedback.style.display = 'block';
        }
    }

    // --- ุฏุงูุฉ ุงูุงุฎุชุจุงุฑ (4 ููุงุท) ---
    function finishQuiz() {
        let q1 = document.querySelector('input[name="q1"]:checked')?.value;
        let q2 = document.querySelector('input[name="q2"]:checked')?.value;
        let q3 = document.querySelector('input[name="q3"]:checked')?.value;
        let q4 = document.querySelector('input[name="q4"]:checked')?.value;

        if (!q1 || !q2 || !q3 || !q4) { alert("ุงูุฑุฌุงุก ุญู ุฌููุน ุงูุฃุณุฆูุฉ"); return; }

        let quizScore = 0;
        if(q1 === 'correct') quizScore++;
        if(q2 === 'correct') quizScore++;
        if(q3 === 'correct') quizScore++;
        if(q4 === 'correct') quizScore++;

        if(scores.quiz === 0) { totalScore += quizScore; scores.quiz = quizScore; }
        
        nextStep(9);
    }

    function generateCertificate() {
        let name = document.getElementById('studentName').value;
        if(name.trim() === "") { alert("ุงูุชุจู ุงุณูู ุฃููุงู!"); return; }
        document.getElementById('certNameDisplay').innerText = name;
        document.getElementById('finalScoreDisplay').innerText = totalScore;
        document.getElementById('certificate-view').style.display = 'block';
    }

</script>

